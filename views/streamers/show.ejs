<!-- Including the Header -->
<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!-- Add Streamers Social Media -->
            <p class="lead">Streamers</p>
            <div class="list-group">
                <li class="list-group-item active">Twtich</li>
                <li class="list-group-item">Youtube</li>
                <li class="list-group-item">Twitter</li>
            </div>
            MAP
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <!-- Add streamer Logo -->
                <img class="img-fluid" src="<%= streamer.logo %>">
                <div class="caption-full">
                    <!-- Add streamer Followers -->
                    <h4 class="float-right">Followers 1,370,343</h4>
                    <!-- Add streamer Name -->
                    <h4><a href="#"><%= streamer.name %></a></h4>
                    <hr>
                    <!-- Add streamer Description -->
                    <p><%= streamer.description %></p>
                    <p>
                        <em>Submitted By: <%= streamer.author.username %></em>
                    </p>
                    <% if(currentUser && streamer.author.id.equals(currentUser._id)){ %>
                    <form class="deleteForm" action="/streamers/<%= streamer._id %>/?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger float-right">Delete</button>
                    </form>
                    <a class="btn btn-warning btn-sm float-right editButton"
                        href="/streamers/<%= streamer._id%>/edit">Edit</a>
                    <% } %>
                </div>
            </div>
            <div class="card bg-light mt-3 p-3">
                
                <div class="text-right">
                    <a class="btn btn-success" href="/streamers/<%= streamer._id %>/comments/new">Add New Comment</a>
                </div>
                
                <% streamer.comments.forEach((comment) => { %>
                <div class="row">
                    <div class="col-md-12">
                        <hr>
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <form class="deleteForm"
                            action="/streamers/<%= streamer._id %>/comments/<%= comment._id %>?_method=DELETE"
                            method="POST">
                            <input type="submit" class="btn btn-sm btn-danger float-right" value="Delete">
                        </form>
                        <a class="btn btn-sm btn-warning float-right editButton"
                            href="/streamers/<%= streamer._id %>/comments/<%= comment._id %>/edit">Edit</a>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<a href="/streamers">Back</a>

<!-- Including the Footer -->
<%- include("../partials/footer") %>