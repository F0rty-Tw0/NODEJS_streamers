<!-- Including the Header -->
<%- include("../partials/header") %>

<h1>EDIT FORM </h1>


<!-- Bootstrap4 Container -->
<div class="row">
    <div class="container">
        <h1 style="text-align: center;">Edit: <%= streamer.name %></h1>
        <!-- The from for adding streamers -->
        <div style="width: 40%; margin: 30px auto;">
            <form action="/streamers/<%= streamer.slug %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="streamer[name]" value="<%= streamer.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="streamer[logo]" value="<%= streamer.logo %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="streamer[description]" value="<%= streamer.description %>">
                </div>
                <button class="btn btn-lg  btn-block btn-primary">Create</button>
            </form>
            <a href="/streamers">Back</a>
        </div>
    </div>
</div>

<!-- Including the Footer -->
<%- include("../partials/footer") %>
